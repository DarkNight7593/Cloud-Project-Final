{
  "openapi": "3.0.3",
  "info": {
    "title": "API de Compras",
    "version": "1.0.0",
    "description": "API que permite a los alumnos registrar, listar y eliminar compras de cursos. Se requiere autenticación por token y las acciones disponibles dependen del rol del usuario (alumno, instructor, admin)."
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ComprarCurso": {
        "type": "object",
        "required": ["tenant_id", "curso_id", "horario_id", "estado"],
        "properties": {
          "tenant_id": { "type": "string", "example": "academia123" },
          "curso_id": { "type": "string", "example": "curso001" },
          "horario_id": { "type": "string", "example": "hora01" },
          "estado": {
            "type": "string",
            "enum": ["reservado", "inscrito"]
          }
        }
      },
      "EliminarCompra": {
        "type": "object",
        "required": ["tenant_id", "curso_id"],
        "properties": {
          "tenant_id": { "type": "string" },
          "curso_id": { "type": "string" }
        }
      },
      "MensajeExito": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "detalle": { "type": "string" }
        }
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/compra/comprar": {
      "post": {
        "summary": "Registrar una compra",
        "description": "Solo los usuarios con rol 'alumno' pueden registrar una compra. Valida curso, horario y evita duplicados. Si el estado es 'inscrito', elimina la reserva previa.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ComprarCurso" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Compra registrada exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MensajeExito" }
              }
            }
          },
          "400": {
            "description": "Datos faltantes o inválidos",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          },
          "403": {
            "description": "Solo alumnos pueden realizar esta operación",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          },
          "409": {
            "description": "Ya existe una compra con este estado",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          }
        }
      }
    },
    "/compra/eliminar": {
      "delete": {
        "summary": "Eliminar compra de curso",
        "description": "Elimina una compra (reservado o inscrito) asociada al alumno autenticado.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EliminarCompra" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Compra eliminada correctamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MensajeExito" }
              }
            }
          },
          "403": {
            "description": "Solo alumnos pueden eliminar sus compras",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          },
          "404": {
            "description": "No se encontró ninguna compra válida",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          }
        }
      }
    },
    "/compra/listar": {
      "get": {
        "summary": "Listar compras según rol",
        "description": "Listar compras del usuario autenticado. \n\n- **Alumno**: Listado filtrado por estado. \n- **Instructor/Admin**: Listado por curso con paginación.",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "tenant_id", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "curso_id", "in": "query", "schema": { "type": "string" } },
          { "name": "estado", "in": "query", "schema": { "type": "string", "enum": ["reservado", "inscrito"] } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "lastCursoId", "in": "query", "schema": { "type": "string" } },
          { "name": "lastAlumnoDni", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Lista de compras del usuario",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "compras": { "type": "array", "items": { "type": "object" } },
                    "paginacion": {
                      "type": "object",
                      "properties": {
                        "ultimoCursoId": { "type": "string" },
                        "ultimoAlumnoDni": { "type": "string" },
                        "total": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Rol no autorizado",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          }
        }
      }
    }
  }
}

