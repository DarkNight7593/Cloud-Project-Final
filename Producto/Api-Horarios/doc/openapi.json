{
  "openapi": "3.0.0",
  "info": {
    "title": "API Horario",
    "description": "API para gestionar horarios en un sistema educativo multitenant",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Horario": {
        "type": "object",
        "properties": {
          "horario_id": { "type": "string" },
          "tenant_id": { "type": "string" },
          "dias": {
            "type": "array",
            "items": { "type": "string" }
          },
          "inicio_hora": { "type": "string" },
          "fin_hora": { "type": "string" },
          "tenant_id_curso_id": { "type": "string" }
        }
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/horario/crear": {
      "post": {
        "summary": "Crear un nuevo horario",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "tenant_id",
                  "curso_id",
                  "dias",
                  "inicio_hora",
                  "fin_hora"
                ],
                "properties": {
                  "tenant_id": { "type": "string" },
                  "curso_id": { "type": "string" },
                  "dias": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "inicio_hora": { "type": "string" },
                  "fin_hora": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Horario creado exitosamente" },
          "400": { "description": "Faltan campos requeridos" },
          "403": { "description": "Token o tenant_id no proporcionado" },
          "404": { "description": "Curso no encontrado" },
          "409": { "description": "Choque de horario" },
          "500": { "description": "Error interno" }
        }
      }
    },
    "/horario/listar": {
      "get": {
        "summary": "Listar horarios por curso",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "tenant_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "curso_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer" }
          },
          {
            "name": "lastHorarioId",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Lista de horarios" },
          "400": { "description": "Par√°metros faltantes" },
          "500": { "description": "Error interno" }
        }
      }
    },
    "/horario/buscar": {
      "get": {
        "summary": "Buscar horario por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "tenant_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "horario_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Horario encontrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Horario" }
              }
            }
          },
          "404": { "description": "Horario no encontrado" }
        }
      }
    },
    "/horario/modificar": {
      "put": {
        "summary": "Modificar un horario",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "tenant_id",
                  "horario_id",
                  "dias",
                  "inicio_hora",
                  "fin_hora"
                ],
                "properties": {
                  "tenant_id": { "type": "string" },
                  "horario_id": { "type": "string" },
                  "dias": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "inicio_hora": { "type": "string" },
                  "fin_hora": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Horario actualizado" },
          "404": { "description": "Horario no encontrado" },
          "409": { "description": "Choque de horario" }
        }
      }
    },
    "/horario/eliminar": {
      "delete": {
        "summary": "Eliminar un horario",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["tenant_id", "horario_id"],
                "properties": {
                  "tenant_id": { "type": "string" },
                  "horario_id": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Horario eliminado" },
          "404": { "description": "Horario no encontrado" }
        }
      }
    }
  }
}
